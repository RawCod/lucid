<h1>Events</h1>
<h3 class="h3">Here are all our amazing events!</h3>
<div class="other-container">
  <% @events.each do |event| %>
    <div class="events-card" data-aos="zoom-in-up" data-aos-duration=90>
      <% if event.photo.attached? %>
        <%= cl_image_tag event.photo.key, height: 150, width: 200, crop: :fill %>
      <% end %>
      <li class="name">
        <p><%=event.name%></p>
      </li>
      <li class="info">
        <p><strong>LOCATION: </strong><%=event.location%></p>
      </li>
      <li class="info">
        <p><strong>CAPACITY: </strong><%=event.capacity%></p>
      </li>
      <li class="info">
        <p><strong>CATEGORY: </strong><%=event.category%></p>
      </li>
      <li class="info">
        <p><strong>Price: </strong><%=event.price%></p>
      </li>
      <%=link_to "MORE INFO", event_path(event)%>
    </div>

  <% end %>
</div>
